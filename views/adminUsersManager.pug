html
    head
        link(rel="stylesheet" href="/css/main.css")
    body
        header
            nav.app-nav
                    ul.app-nav__list
                        li.app-nav__list-item
                            a.app-nav__link(href="/adminHome") home
                        li.app-nav__list-item
                            a.app-nav__link(href="/adminHome/colony") colony
                        li.app-nav__list-item
                            a.app-nav__link.app-nav__link--is-active(href="/adminHome/users")  users
                        li.app-nav__list-item
                            a.app-nav__link(href="/logout")  Log out
            .wrapperAdmin
                table
                    tr
                        th.colony_table_cell Name         
                        th.colony_table_cell Surname
                        th.colony_table_cell login
                        th.colony_table_cell E-mail
                        th.colony_table_cell Type
                        br
                        each user in users
                            tr
                                td.colony_table_cell= user.name
                                td.colony_table_cell= user.surname
                                td.colony_table_cell= user.login
                                td.colony_table_cell= user.mail
                                td.colony_table_cell= user.userType
                                td.colony_table_cell 
                                    a.app-nav__link(href="/adminHome/deleteUser/"+user._id ) delete 